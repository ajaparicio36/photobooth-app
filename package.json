{
  "name": "photobooth-app",
  "private": true,
  "version": "0.1.0",
  "main": "dist-electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "tsc --project tsconfig.app.json && vite build",
    "preview": "vite preview",
    "electron:dev": "tsc --project tsconfig.electron.json && electron .",
    "electron:build": "bun run build && tsc --project tsconfig.electron.json && electron-builder",
    "dev:app": "concurrently \"bun run dev\" \"bun run wait-and-electron\"",
    "wait-and-electron": "wait-on http://localhost:5173 && bun run electron:dev",
    "build:exe": "bun run build && tsc --project tsconfig.electron.json && electron-builder --win --publish=never",
    "dist": "bun run build:exe"
  },
  "build": {
    "appId": "com.photobooth.app",
    "productName": "Photobooth App",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "!node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-portable.exe",
      "requestedExecutionLevel": "asInvoker"
    },
    "compression": "store",
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "buildVersion": "1.0.0",
    "electronVersion": "28.0.0",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraMetadata": {
      "name": "photobooth-app"
    }
  },
  "dependencies": {
    "motion": "^12.16.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.6.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "wait-on": "^7.0.0"
  }
}
